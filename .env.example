# ===========================================
# Leads Checker Tool - Environment Variables
# ===========================================

# Application
APP_NAME=leads-checker-tool
DEBUG=false
SECRET_KEY=your-super-secret-key-change-in-production

# MongoDB (New VPS - Main Database)
MONGODB_URL=mongodb://localhost:27017
MONGODB_DATABASE=leads_checker

# Redis (Task Queue)
REDIS_URL=redis://localhost:6379/0

# Celery Configuration
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0
CELERY_WORKER_CONCURRENCY=4

# ===========================================
# External VPS Databases (READ ONLY)
# These are existing production databases from privatedatachecker
# Copy the connection strings from your privatedatachecker .env file
# ===========================================

# VPS2: Mail Data 1 (domains A-G)
VPS2_MONGODB_URL=mongodb://user:password@vps2.example.com:27017
VPS2_MONGODB_DATABASE=email_ag_db
VPS2_ENABLED=true

# VPS3: Mail Data 2 (domains H-N)
VPS3_MONGODB_URL=mongodb://user:password@vps3.example.com:27017
VPS3_MONGODB_DATABASE=email_hn_db
VPS3_ENABLED=true

# VPS4: Mail Data 3 (domains O-U)
VPS4_MONGODB_URL=mongodb://user:password@vps4.example.com:27017
VPS4_MONGODB_DATABASE=email_ou_db
VPS4_ENABLED=true

# VPS5: Mail Data 4 (domains V-Z, Extra, yahoo.fr, comcast.net)
VPS5_MONGODB_URL=mongodb://user:password@vps5.example.com:27017
VPS5_MONGODB_DATABASE=email_vz_db
VPS5_ENABLED=true

# VPS6: Mail Data 5 (gmail.com)
VPS6_MONGODB_URL=mongodb://user:password@vps6.example.com:27017
VPS6_MONGODB_DATABASE=email_gmail_db
VPS6_ENABLED=true

# VPS7: Mail Data 6 (hotmail.com, hotmail.fr, mail.ru)
VPS7_MONGODB_URL=mongodb://user:password@vps7.example.com:27017
VPS7_MONGODB_DATABASE=email_hotmail_db
VPS7_ENABLED=true

# VPS8: Mail Data 7 (yahoo.com, aol.com)
VPS8_MONGODB_URL=mongodb://user:password@vps8.example.com:27017
VPS8_MONGODB_DATABASE=email_yahoo_aol_db
VPS8_ENABLED=true

# NOTE: The database names above are examples. 
# Copy the actual values from your privatedatachecker backend/.env:
# - EMAIL_AG_MONGO_URI -> VPS2_MONGODB_URL
# - EMAIL_AG_MONGO_DB -> VPS2_MONGODB_DATABASE
# - EMAIL_HN_MONGO_URI -> VPS3_MONGODB_URL
# - EMAIL_HN_MONGO_DB -> VPS3_MONGODB_DATABASE
# - EMAIL_OU_MONGO_URI -> VPS4_MONGODB_URL
# - EMAIL_OU_MONGO_DB -> VPS4_MONGODB_DATABASE
# - EMAIL_VZ_MONGO_URI -> VPS5_MONGODB_URL
# - EMAIL_VZ_MONGO_DB -> VPS5_MONGODB_DATABASE
# - EMAIL_GMAIL_MONGO_URI -> VPS6_MONGODB_URL
# - EMAIL_GMAIL_MONGO_DB -> VPS6_MONGODB_DATABASE
# - EMAIL_HOTMAIL_MONGO_URI -> VPS7_MONGODB_URL
# - EMAIL_HOTMAIL_MONGO_DB -> VPS7_MONGODB_DATABASE
# - EMAIL_YAHOO_AOL_MONGO_URI -> VPS8_MONGODB_URL
# - EMAIL_YAHOO_AOL_MONGO_DB -> VPS8_MONGODB_DATABASE

# ===========================================
# Frontend Configuration
# ===========================================
VITE_API_URL=http://localhost:8000/api

# ===========================================
# Admin Configuration
# ===========================================
ADMIN_USERNAME=admin
ADMIN_PASSWORD=change-this-password

# ===========================================
# File Upload Configuration
# ===========================================
MAX_UPLOAD_SIZE_MB=50
UPLOAD_DIR=./uploads
RESULTS_DIR=./results
