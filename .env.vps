# ===========================================
# Leads Checker Tool - VPS Production Environment
# ===========================================
# IMPORTANT: Copy this file to .env and update with your actual VPS values

# Application
APP_NAME=leads-checker-tool
DEBUG=false
SECRET_KEY=CHANGE_THIS_TO_A_SECURE_RANDOM_STRING_IN_PRODUCTION

# MongoDB (Main Database on VPS)
MONGODB_URL=mongodb://localhost:27017
MONGODB_DATABASE=leads_checker

# Redis (Task Queue)
REDIS_URL=redis://localhost:6379/0

# Celery Configuration
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0
CELERY_WORKER_CONCURRENCY=4

# ===========================================
# External VPS Databases (READ ONLY)
# CRITICAL: These MUST be configured for email verification to work!
# Copy the connection strings from your privatedatachecker .env file
# ===========================================

# VPS2: Mail Data 1 (domains A-G)
# Example: mongodb://username:password@vps2.example.com:27017/email_A_G
VPS2_MONGODB_URL=
VPS2_MONGODB_DATABASE=email_A_G
VPS2_ENABLED=false

# VPS3: Mail Data 2 (domains H-N)
VPS3_MONGODB_URL=
VPS3_MONGODB_DATABASE=email_H_N
VPS3_ENABLED=false

# VPS4: Mail Data 3 (domains O-U)
VPS4_MONGODB_URL=
VPS4_MONGODB_DATABASE=email_O_U
VPS4_ENABLED=false

# VPS5: Mail Data 4 (domains V-Z, Extra, yahoo.fr, comcast.net)
VPS5_MONGODB_URL=
VPS5_MONGODB_DATABASE=email_V_Z
VPS5_ENABLED=false

# VPS6: Mail Data 5 (gmail.com)
VPS6_MONGODB_URL=
VPS6_MONGODB_DATABASE=email_gmail
VPS6_ENABLED=false

# VPS7: Mail Data 6 (hotmail.com, hotmail.fr, mail.ru)
VPS7_MONGODB_URL=
VPS7_MONGODB_DATABASE=email_hotmail
VPS7_ENABLED=false

# VPS8: Mail Data 7 (yahoo.com, aol.com)
VPS8_MONGODB_URL=
VPS8_MONGODB_DATABASE=email_yahoo_aol
VPS8_ENABLED=false

# ===========================================
# Frontend Configuration
# ===========================================
# Update this to your VPS IP/domain
VITE_API_URL=http://138.226.247.175:4005/api

# ===========================================
# Admin Configuration
# ===========================================
# IMPORTANT: Change these credentials in production!
ADMIN_USERNAME=admin
ADMIN_PASSWORD=CHANGE_THIS_PASSWORD

# ===========================================
# File Upload Configuration
# ===========================================
MAX_UPLOAD_SIZE_MB=50
UPLOAD_DIR=./uploads
RESULTS_DIR=./results
