# ===========================================
# Leads Checker Tool - Environment Variables
# ===========================================

# ===========================================
# ENVIRONMENT MODE
# ===========================================
# Set to "local" for local development or "server" for production VPS
# This determines which VPS database URLs to use
ENV_MODE=local

# ===========================================
# Application
# ===========================================
APP_NAME=leads-checker-tool
DEBUG=true
SECRET_KEY=your-super-secret-key-change-in-production

# ===========================================
# MongoDB (Main Database)
# ===========================================
MONGODB_URL=mongodb://localhost:27017
MONGODB_DATABASE=leads_checker

# ===========================================
# Redis (Task Queue)
# ===========================================
REDIS_URL=redis://localhost:6379/0

# ===========================================
# Celery Configuration
# ===========================================
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0
CELERY_WORKER_CONCURRENCY=4

# ===========================================
# External VPS Databases (READ ONLY)
# ===========================================
# IMPORTANT: These URLs determine where leaked email data is checked
# 
# FOR LOCAL DEVELOPMENT (ENV_MODE=local):
#   - Use localhost URLs to connect to your local VPS databases
#   - Make sure you have the VPS databases running locally
#
# FOR SERVER/PRODUCTION (ENV_MODE=server):
#   - Replace localhost with actual external VPS IPs/hostnames
#   - Example: mongodb://username:password@192.168.1.100:27017/email_A_G
#   - Get these from your privatedatachecker setup
# ===========================================

# VPS2: Mail Data 1 (domains A-G)
# Handles: aicardi.org, atxg.com, e-mail.ua, aa-fm.com, etc.
VPS2_MONGODB_URL=mongodb://localhost:27017
VPS2_MONGODB_DATABASE=email_A_G
VPS2_ENABLED=true

# VPS3: Mail Data 2 (domains H-N)
VPS3_MONGODB_URL=mongodb://localhost:27017
VPS3_MONGODB_DATABASE=email_H_N
VPS3_ENABLED=true

# VPS4: Mail Data 3 (domains O-U)
VPS4_MONGODB_URL=mongodb://localhost:27017
VPS4_MONGODB_DATABASE=email_O_U
VPS4_ENABLED=true

# VPS5: Mail Data 4 (domains V-Z, Extra, yahoo.fr, comcast.net)
VPS5_MONGODB_URL=mongodb://localhost:27017
VPS5_MONGODB_DATABASE=email_V_Z
VPS5_ENABLED=true

# VPS6: Mail Data 5 (gmail.com)
# Handles: ALL gmail.com emails (likeforyou2026@gmail.com, etc.)
VPS6_MONGODB_URL=mongodb://localhost:27017
VPS6_MONGODB_DATABASE=email_gmail
VPS6_ENABLED=true

# VPS7: Mail Data 6 (hotmail.com, hotmail.fr, mail.ru)
VPS7_MONGODB_URL=mongodb://localhost:27017
VPS7_MONGODB_DATABASE=email_hotmail
VPS7_ENABLED=true

# VPS8: Mail Data 7 (yahoo.com, aol.com)
VPS8_MONGODB_URL=mongodb://localhost:27017
VPS8_MONGODB_DATABASE=email_yahoo_aol
VPS8_ENABLED=true

# ===========================================
# SERVER VPS DATABASE URLS (for ENV_MODE=server)
# ===========================================
# Uncomment and configure these when deploying to server
# Then change ENV_MODE=server at the top
# 
# SERVER_VPS2_MONGODB_URL=mongodb://username:password@VPS2_IP:27017/email_A_G
# SERVER_VPS3_MONGODB_URL=mongodb://username:password@VPS3_IP:27017/email_H_N
# SERVER_VPS4_MONGODB_URL=mongodb://username:password@VPS4_IP:27017/email_O_U
# SERVER_VPS5_MONGODB_URL=mongodb://username:password@VPS5_IP:27017/email_V_Z
# SERVER_VPS6_MONGODB_URL=mongodb://username:password@VPS6_IP:27017/email_gmail
# SERVER_VPS7_MONGODB_URL=mongodb://username:password@VPS7_IP:27017/email_hotmail
# SERVER_VPS8_MONGODB_URL=mongodb://username:password@VPS8_IP:27017/email_yahoo_aol

# ===========================================
# Frontend Configuration
# ===========================================
VITE_API_URL=http://localhost:8000/api

# ===========================================
# Admin Configuration
# ===========================================
ADMIN_USERNAME=admin
ADMIN_PASSWORD=admin

# ===========================================
# File Upload Configuration
# ===========================================
MAX_UPLOAD_SIZE_MB=50
UPLOAD_DIR=./uploads
RESULTS_DIR=./results
